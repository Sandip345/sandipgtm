---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const allNews = await getCollection('news');
const allExperiences = await getCollection('experience');

// Latest ONE news
const latestNews = allNews
  .slice()
  .sort((a, b) => {
    const ta = Date.parse(a.data.date ?? '') || 0;
    const tb = Date.parse(b.data.date ?? '') || 0;
    return tb - ta;
  })
  .slice(0, 1);

// Latest 3 experiences
const experiences = allExperiences
  .slice()
  .sort((a, b) => (b.data.start ?? '').localeCompare(a.data.start ?? ''))
  .slice(0, 3);

// Max 6 projects (featured first if exists)
const featured = allProjects.filter((p) => p.data.featured);
const projects = (featured.length ? featured : allProjects)
  .slice()
  .slice(0, 6);
---

<BaseLayout
  title="Sandip Gautam – Portfolio"
  description="Personal website built with Astro + Tailwind."
>

  <!-- Hero Section -->
  <section class="space-y-6">
    <div class="space-y-3">
      <h1 class="text-3xl font-semibold tracking-tight sm:text-4xl">
        Hi, I’m Sandip.
      </h1>

      <p class="text-lg leading-relaxed text-slate-700">
        <span class="font-medium text-slate-900">
          Mechanical Engineering M.S. student
        </span>
        specializing in thermal-fluid systems, CFD, and experimental analysis.
        I translate physical insight into practical engineering decisions and
        produce clear technical documentation. Seeking early-career roles in
        product design, HVAC systems, and thermal-fluid analysis.
      </p>
    </div>

    <div class="flex flex-wrap gap-2">
      <a
        href="/projects"
        class="rounded-lg bg-slate-900 px-4 py-2 text-sm font-medium text-white hover:bg-slate-800"
      >
        View Projects
      </a>

      <a
        href="/news"
        class="rounded-lg border border-slate-300 px-4 py-2 text-sm font-medium text-slate-900 hover:bg-slate-50"
      >
        Read News
      </a>
    </div>

    <!-- Latest News Ticker -->
    {latestNews.length ? (
      <div class="mt-4 flex items-center gap-3">
        <span class="shrink-0 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">
          Latest News
        </span>

        <div class="relative flex-1 overflow-hidden rounded-xl border border-slate-200 bg-white">
          <div class="news-ticker flex items-center whitespace-nowrap px-4 py-3 text-sm text-slate-700">
            <a
              href={`/news/${latestNews[0].slug}`}
              class="font-medium hover:underline"
            >
              {latestNews[0].data.title}
            </a>

            <span class="mx-10 text-slate-300">•</span>

            <a
              href={`/news/${latestNews[0].slug}`}
              class="font-medium hover:underline"
              aria-hidden="true"
            >
              {latestNews[0].data.title}
            </a>
          </div>
        </div>

        <a
          href="/news"
          class="shrink-0 text-sm text-slate-600 hover:text-slate-900"
        >
          All news →
        </a>
      </div>
    ) : null}
  </section>

  <!-- Experience Section (Text Only) -->
  <section class="mt-12">
    <div class="mb-4 flex items-center justify-between">
      <h2 class="text-xl font-semibold tracking-tight">Experience</h2>
      <a href="/experience" class="text-sm text-slate-600 hover:text-slate-900">
        All experience →
      </a>
    </div>

    <div class="space-y-4">
      {experiences.map((e) => (
        <a
          href={`/experience/${e.slug}`}
          class="group block rounded-xl border border-slate-200 bg-white p-6 shadow-sm transition hover:shadow-md"
        >
          <div class="flex flex-wrap items-center gap-x-3 gap-y-1 text-sm text-slate-500">
            <span>
              {(e.data.start ?? '')}
              {e.data.end ? ` - ${e.data.end}` : ' - Present'}
            </span>
            <span class="text-slate-300">•</span>
            <span>
              <span class="font-medium text-slate-700">
                {e.data.company}
              </span>
              {e.data.location ? ` — ${e.data.location}` : ''}
            </span>
          </div>

          <h3 class="mt-2 text-lg font-semibold text-slate-900 group-hover:underline">
            {e.data.title}
          </h3>

          <p class="mt-2 text-sm text-slate-600">
            {e.data.summary ?? 'View details.'}
          </p>
        </a>
      ))}
    </div>
  </section>

  <!-- Latest Projects (Max 6) -->
  <section class="mt-12">
    <div class="mb-4 flex items-end justify-between">
      <h2 class="text-xl font-semibold tracking-tight">
        Latest Projects
      </h2>
      <a
        href="/projects"
        class="text-sm text-slate-600 hover:text-slate-900"
      >
        All projects →
      </a>
    </div>

    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {projects.map((p) => (
        <a
          href={`/projects/${p.slug}`}
          class="group rounded-2xl border border-slate-200 p-5 shadow-sm transition hover:-translate-y-0.5 hover:shadow"
        >
          <div class="space-y-2">
            <div class="text-sm text-slate-500">
              {p.data.date ?? p.data.period ?? 'Project'}
            </div>

            <div class="font-medium text-slate-900 group-hover:underline">
              {p.data.title}
            </div>

            <p class="line-clamp-3 text-sm text-slate-600">
              {p.data.description ?? 'Open to read details.'}
            </p>
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- Animation CSS -->
  <style>
    .news-ticker {
      animation: ticker 14s linear infinite;
    }

    .news-ticker:hover {
      animation-play-state: paused;
    }

    @keyframes ticker {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }
  </style>

</BaseLayout>
