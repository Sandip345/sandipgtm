---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const experiences = (await getCollection('experience')).sort((a, b) =>
  (b.data.start ?? '').localeCompare(a.data.start ?? '')
);
---

<BaseLayout title="Experience" description="Work and research experience">
  <div class="mb-8 space-y-2">
    <h1 class="text-3xl font-semibold tracking-tight">Experience</h1>
    <p class="text-slate-600">
      Markdown-driven entries from{' '}
      <code class="rounded bg-slate-100 px-1">src/content/experience</code>.
    </p>
  </div>

  <!-- Full-width stacked list -->
  <div class="mx-auto max-w-5xl space-y-6">
    {experiences.map((e) => (
      <a
        href={`/experience/${e.slug}`}
class="text-slate-600 hover:text-slate-900 dark:text-slate-300 dark:hover:text-emerald-300"
      >
        {/* Use grid so left image stays tall and aligned */}
        <div class="grid md:grid-cols-[340px_1fr]">
          {/* Left cover image */}
          {e.data.coverImage ? (
            <div class="relative h-72 md:h-full overflow-hidden">
              <img
                src={e.data.coverImage}
                alt={e.data.title}
                class="absolute inset-0 h-full w-full object-cover transition duration-300 group-hover:scale-105"
                loading="lazy"
              />
            </div>
          ) : (
            <div class="h-72 bg-slate-100 md:h-full" />
          )}

          {/* Right content */}
          <div class="p-6 md:p-8">
            <div class="flex flex-wrap items-center gap-x-3 gap-y-1 text-sm text-slate-500">
              <span>
                {(e.data.start ?? '')}{e.data.end ? ` - ${e.data.end}` : ' - Present'}
              </span>
              <span class="text-slate-300">•</span>
              <span>
                <span class="font-medium text-slate-700">{e.data.company}</span>
                {e.data.location ? ` — ${e.data.location}` : ''}
              </span>
            </div>

            <h2 class="mt-3 text-xl font-semibold text-slate-900 group-hover:underline">
              {e.data.title}
            </h2>

            <p class="mt-2 text-sm leading-relaxed text-slate-600">
              {e.data.summary ?? 'Open to read details.'}
            </p>

            {e.data.tags?.length ? (
              <div class="mt-4 flex flex-wrap gap-2">
                {e.data.tags.slice(0, 6).map((t) => (
                  <span class="rounded-full bg-slate-100 px-2 py-0.5 text-xs text-slate-700">
                    {t}
                  </span>
                ))}
              </div>
            ) : null}

            <div class="mt-6 text-sm font-medium text-slate-700">
              View details <span class="inline-block transition group-hover:translate-x-0.5">→</span>
            </div>
          </div>
        </div>
      </a>
    ))}
  </div>
</BaseLayout>
